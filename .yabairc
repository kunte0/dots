#!/usr/bin/env sh

sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

yabai -m rule --add label="System Settings" app="^System Settings$" manage=off layer=below
yabai -m rule --add label="App Store" app="^App Store$" manage=off layer=below
yabai -m rule --add label="Activity Monitor" app="^Activity Monitor$" manage=off layer=below
yabai -m rule --add label="KeePassXC" app="^KeePassXC$" manage=off layer=below
yabai -m rule --add label="Calculator" app="^Calculator$" manage=off layer=below
yabai -m rule --add label="Dictionary" app="^Dictionary$" manage=off layer=below
yabai -m rule --add label="VirtualBox" app="^VirtualBox$" manage=off layer=below
yabai -m rule --add label="iVmware Settings" app="^VMware Fusion$" manage=off layer=below
yabai -m rule --add label="Microsoft AutoUpdate" app="^Microsoft AutoUpdate$" manage=off layer=below
yabai -m rule --add app="^Keka$" manage=off layer=below
yabai -m rule --add title="^About$" manage=off layer=below
# yabai -m rule --add app="^Google Chrome$" manage=off





# global settings
yabai -m config mouse_follows_focus          off
yabai -m config window_placement             second_child
yabai -m config window_shadow                float
yabai -m config window_opacity               off
yabai -m config window_opacity_duration      0.0
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        1.0
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 on



yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize




# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  10
yabai -m config bottom_padding               10
yabai -m config left_padding                 10
yabai -m config right_padding                10
yabai -m config window_gap                   10

yabai -m config external_bar                 all:0:0
echo "yabai configuration loaded.."
